{
	"library": "Leaflet",
	"interactions": {
		"retrieve": {
			"logging": true,
			"attributes": ["name", "density"]
		},
		"pan": {
			"logging": true
		},
		"zoom": {
			"logging": true
		},
		"overlay": {
			"logging": true,
			"dataLayers": [
				"US States Choropleth"
			]
		},
		"underlay": {
			"logging": true
		},
		"search": {
			"attributes": ["name", "density"],
			"logging": true
		},
		"filter": {
			"attributes": ["density"],
			"tool": "logic",
			"logging": true
		}
	},
	"mapOptions": {
		"center": [39.83,-98.583],
		"zoom": 3,
		"minZoom": 3,
		"maxZoom": 13
	},
	"baseLayers": [{
		"name": "OSM-BW",
		"source": "http://{s}.tiles.wmflabs.org/bw-mapnik/{z}/{x}/{y}.png",
		"layerOptions": {
			"attribution": "&copy; <a href='http://www.openstreetmap.org/copyright'>OpenStreetMap Contributors</a>"
		}
	}],
	"dataLayers": [{
		"name": "US States Choropleth",
		"source": "data/us-states.geojson",
		"postgisTable": "",
		"expressedAttribute": "density",
		"layerOptions": {
			"fillOpacity": 0.8,
			"color": "white",
			"opacity": 1
		},
		"technique": {
			"type": "choropleth",
			"classification": "quantile",
			"classes": [
				"#FEEDDE",
				"#FDBE85",
				"#FD8D3C",
				"#E6550D",
				"#A63603"
			]
		}
	},
	{
		"name": "Cities Layer",
		"source": "data/city-data.geojson",
		"expressedAttribute": "2011",
		"layerOptions": {
			"fillOpacity": 0.8,
			"color": "white",
			"fillColor": "blue",
			"opacity": 1,
			"weight": 1
		},
		"technique": {
			"type": "proportional symbol",
			"classification": "unclassed",
			"classes": [
				5,
				20
			]
		}
	}]
}